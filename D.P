            <p class="text-gray-300 mb-4">Completa tus datos y confirma tu pedido. Te contactaremos para finalizar los detalles de personalizaci¥n.</p>
            
            <div id="order-summary" class="bg-gray-700 p-4 rounded-lg mb-4 text-white">
                <!-- Order summary will be inserted here -->
            </div>
            
            <div class="flex flex-col space-y-3">
                <button id="confirm-order" class="w-full bg-[#25D366] hover:bg-[#20bd5a] text-white font-bold py-3 px-4 rounded-lg transition-colors flex items-center justify-center">
                    <i class="fab fa-whatsapp mr-2 text-xl"></i> Confirmar Pedido por WhatsApp
                </button>
                <button id="close-modal-btn" class="w-full bg-gray-700 hover:bg-gray-600 text-white font-bold py-3 px-4 rounded-lg transition-colors">
                    Cancelar
                </button>
            </div>
        </div>
    </div>
    
    <!-- Copy Success Toast -->
    <div id="copy-toast" class="fixed bottom-4 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white px-4 py-2 rounded-lg shadow-lg hidden">
        <div class="flex items-center">
            <i class="fas fa-check-circle text-green-400 mr-2"></i>
            <span>?Enlace copiado! Comp?rtelo con tus amigos</span>
        </div>
    </div>
    
    <script>
        // Product prices
        const prices = {
            'tazas': 60,
            'camisetas': 250,
            'sudaderas': 380,
            'termos': 220,
            'tazas_magicas': 95
        };
        
        // DOM elements
        const productSelect = document.getElementById('product-select');
        const quantityInput = document.getElementById('quantity-input');
        const calculateBtn = document.getElementById('calculate-btn');
        const result = document.getElementById('result');
        const unitPrice = document.getElementById('unit-price');
        const quantityDisplay = document.getElementById('quantity-display');
        const subtotal = document.getElementById('subtotal');
        const discountRow = document.getElementById('discount-row');
        const discountAmount = document.getElementById('discount-amount');
        const totalPrice = document.getElementById('total-price');
        const orderBtn = document.getElementById('order-btn');
        const modal = document.getElementById('modal');
        const closeModal = document.getElementById('close-modal');
        const closeModalBtn = document.getElementById('close-modal-btn');
        const orderSummary = document.getElementById('order-summary');
        const confirmOrder = document.getElementById('confirm-order');
        const selectProductBtns = document.querySelectorAll('.select-product');
        const copyToast = document.getElementById('copy-toast');
        const customerName = document.getElementById('customer-name');
        const customerPhone = document.getElementById('customer-phone');
        const customerNotes = document.getElementById('customer-notes');
        
        // Set end date for countdown (3 days from now)
        const endDate = new Date();
        endDate.setDate(endDate.getDate() + 3);
        
        // Countdown timer
        function updateCountdown() {
            const now = new Date();
            const diff = endDate - now;
            
            // Calculate time components
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            // Update the DOM
            document.getElementById('days').textContent = days;
            document.getElementById('hours').textContent = hours < 10 ? '0' + hours : hours;
            document.getElementById('minutes').textContent = minutes < 10 ? '0' + minutes : minutes;
            document.getElementById('seconds').textContent = seconds < 10 ? '0' + seconds : seconds;
            
            // If countdown is finished
            if (diff < 0) {
                document.getElementById('days').textContent = '00';
                document.getElementById('hours').textContent = '00';
                document.getElementById('minutes').textContent = '00';
                document.getElementById('seconds').textContent = '00';
            }
        }
        
        // Update countdown every second
        setInterval(updateCountdown, 1000);
        updateCountdown();
        
        // Calculate price function
        function calculatePrice() {
            const product = productSelect.value;
            const quantity = parseInt(quantityInput.value);
            const price = prices[product];
            
            if (quantity < 1) {
                quantityInput.value = 1;
                return calculatePrice();
            }
            
            const subtotalValue = price * quantity;
            let discount = 0;
            
            // Apply discount if quantity is 2 or more
            if (quantity >= 2) {
                discount = subtotalValue * 0.10;
                discountRow.classList.remove('hidden');
            } else {
                discountRow.classList.add('hidden');
            }
            
            const total = subtotalValue - discount;
            
            // Update UI
            unitPrice.textContent = `$${price}`;
            quantityDisplay.textContent = quantity;
            subtotal.textContent = `$${subtotalValue}`;
            discountAmount.textContent = `-$${discount.toFixed(0)}`;
            totalPrice.textContent = `$${total.toFixed(0)}`;
            
            result.classList.remove('hidden');
        }
        
        // Copy to clipboard function
        function copyToClipboard() {
            const text = "?Aprovecha la promoci¥n de DISE?O PERFECTO! ?? 10% de descuento en todos los productos personalizados a partir de 2 piezas. Cont?ctanos al 720 562 4565 o en Instagram @d.p.sublimacion";
            
            navigator.clipboard.writeText(text).then(function() {
                // Show toast
                copyToast.classList.remove('hidden');
                
                // Hide toast after 3 seconds
                setTimeout(function() {
                    copyToast.classList.add('hidden');
                }, 3000);
            });
        }
        
        // Event listeners
        calculateBtn.addEventListener('click', calculatePrice);
        
        orderBtn.addEventListener('click', function() {
            // If calculation hasn't been done, do it now
            if (result.classList.contains('hidden')) {
                calculatePrice();
            }
            
            // Prepare order summary
            const product = productSelect.options[productSelect.selectedIndex].text;
            const quantity = parseInt(quantityInput.value);
            const price = parseInt(unitPrice.textContent.replace('$', ''));
            const subtotalValue = parseInt(subtotal.textContent.replace('$', ''));
            const total = totalPrice.textContent;
            
            let discountText = '';
            if (!discountRow.classList.contains('hidden')) {
                discountText = `
                <div class="flex justify-between items-center mb-1 text-green-400">
                    <span>Descuento (10%):</span>
                    <span>${discountAmount.textContent}</span>
                </div>`;
            }
            
            orderSummary.innerHTML = `
                <div class="text-lg font-semibold mb-2">Resumen del Pedido</div>
                <div class="flex justify-between items-center mb-1">
                    <span>Producto:</span>
                    <span>${product.split(' - ')[0]}</span>
                </div>
                <div class="flex justify-between items-center mb-1">
                    <span>Cantidad:</span>
                    <span>${quantity}</span>
                </div>
                <div class="flex justify-between items-center mb-1">
                    <span>Precio unitario:</span>
                    <span>$${price}</span>
                </div>
                <div class="flex justify-between items-center mb-1">
                    <span>Subtotal:</span>
                    <span>$${subtotalValue}</span>
                </div>
                ${discountText}
                <div class="flex justify-between items-center pt-2 border-t border-gray-600 font-bold">
                    <span>Total:</span>
                    <span>${total}</span>
                </div>
            `;
            
            // Show modal
            modal.classList.remove('hidden');
        });
        
        closeModal.addEventListener('click', function() {
            modal.classList.add('hidden');
        });
        
        closeModalBtn.addEventListener('click', function() {
            modal.classList.add('hidden');
        });
        
        confirmOrder.addEventListener('click', function() {
            // Get customer information
            const name = customerName.value.trim();
            const phone = customerPhone.value.trim();
            const notes = customerNotes.value.trim();
            
            // Validate name
            if (!name) {
                alert("Por favor ingresa tu nombre para continuar.");
                customerName.focus();
                return;
            }
            
            // Get order details
            const product = productSelect.options[productSelect.selectedIndex].text.split(' - ')[0];
            const quantity = parseInt(quantityInput.value);
            const price = parseInt(unitPrice.textContent.replace('$', ''));
            const subtotalValue = parseInt(subtotal.textContent.replace('$', ''));
            const total = totalPrice.textContent.replace('$', '');
            
            // Calculate discount amount
            let discountValue = 0;
            if (!discountRow.classList.contains('hidden')) {
                discountValue = parseInt(discountAmount.textContent.replace('-$', ''));
            }
            
            // Create WhatsApp message
            let message = `*?NUEVO PEDIDO!* ???\n\n`;
            message += `*Cliente:* ${name}\n`;
            if (phone) message += `*Tel¥fono:* ${phone}\n`;
            message += `\n*Detalles del Pedido:*\n`;
            message += `*Producto:* ${product}\n`;
            message += `*Cantidad:* ${quantity}\n`;
            message += `*Precio unitario:* $${price}\n`;
            message += `*Subtotal:* $${subtotalValue}\n`;
            
            if (discountValue > 0) {
                message += `*Descuento (10%):* -$${discountValue}\n`;
            }
            
            message += `*Total:* $${total}\n`;
            
            if (notes) {
                message += `\n*Notas:* ${notes}\n`;
            }
            
            message += `\n*Fecha:* ${new Date().toLocaleDateString()}\n`;
            message += `*Hora:* ${new Date().toLocaleTimeString()}\n`;
            
            // Open WhatsApp with the message
            const encodedMessage = encodeURIComponent(message);
            window.open(`https://wa.me/527205624565?text=${encodedMessage}`, '_blank');
            
            // Close modal
            modal.classList.add('hidden');
            
            // Reset form
            customerName.value = '';
            customerPhone.value = '';
            customerNotes.value = '';
        });
        
        // Close modal when clicking outside
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                modal.classList.add('hidden');
            }
        });
        
        // Product selection buttons
        selectProductBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const product = this.dataset.product;
                productSelect.value = product;
                
                // Scroll to calculator section
                document.querySelector('.bg-gray-800').scrollIntoView({ 
                    behavior: 'smooth' 
                });
            });
        });
        
        // Share functions
        function shareOnWhatsApp() {
            const text = encodeURIComponent("?Aprovecha la promoci¥n de DISE?O PERFECTO! ?? 10% de descuento en todos los productos personalizados a partir de 2 piezas. Visita nuestra p?gina o cont?ctanos al 720 562 4565 o en Instagram @d.p.sublimacion");
            window.open(`https://wa.me/?text=${text}`, '_blank');
        }
        
        function shareOnInstagram() {
            alert("Para compartir en Instagram:\n\n1. Toma una captura de pantalla de esta promoci¥n\n2. Abre Instagram\n3. Crea una nueva historia\n4. Sube la captura de pantalla\n5. Etiqueta a @d.p.sublimacion");
        }
        
        function shareOrderOnWhatsApp() {
            const product = productSelect.options[productSelect.selectedIndex].text.split(' - ')[0];
            const quantity = parseInt(quantityInput.value);
            const total = totalPrice.textContent;
            
            const text = encodeURIComponent(`?Acabo de hacer un pedido en DISE?O PERFECTO! ???\n\nProducto: ${product}\nCantidad: ${quantity}\nTotal: ${total}\n\n?Aprovecha tambi¥n la promoci¥n del 10% de descuento en todos los productos personalizados a partir de 2 piezas! Cont?ctalos al 720 562 4565 o en Instagram @d.p.sublimacion`);
            
            window.open(`https://wa.me/?text=${text}`, '_blank');
        }
    </script>
